// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Goal {
  id          String @id @default(uuid())
  description String

  created_at DateTime @default(now())

  @@map("goals")
}
